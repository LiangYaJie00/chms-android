<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 状态为按下时的颜色 -->
    <item android:state_pressed="true" android:color="@color/grey1" />
    <!-- 状态为不可点击时的颜色 -->
    <item android:state_enabled="false" android:color="@color/grey2" />
    <!-- 默认状态的颜色 -->
    <item android:color="@color/black" />
</selector>