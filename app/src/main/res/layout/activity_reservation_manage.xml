<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".features.mine.activity.ReservationManageActivity">


    <com.example.chms_android.ui.components.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="预约管理"
        app:mode="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/normal_margin_16"
        android:layout_marginTop="@dimen/normal_margin_10"
        android:src="@mipmap/bar01"
        android:scaleType="centerInside"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="@dimen/normal_margin_16"
        android:layout_marginTop="@dimen/normal_margin_10"
        android:src="@mipmap/card02"
        android:scaleType="centerInside"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginHorizontal="@dimen/normal_margin_16"
        android:src="@mipmap/card01"
        android:scaleType="centerInside"/>


</LinearLayout>