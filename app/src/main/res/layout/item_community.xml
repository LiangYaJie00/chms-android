<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_ic_community_card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="@dimen/normal_margin_10"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:cardBackgroundColor="@color/green01"
        app:cardCornerRadius="10dp"
        android:clickable="true"
        app:cardElevation="0dp"
        android:focusable="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_ic_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_community04" />

            <!-- 蒙层 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_ic_community_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="云边社区"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_size_18"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_ic_community_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/normal_margin_10"
                    android:drawableLeft="@drawable/baseline_pin_drop_24"
                    android:drawablePadding="3dp"
                    android:text="北京市朝阳区建国路123号"
                    android:textSize="@dimen/title_size_12"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>