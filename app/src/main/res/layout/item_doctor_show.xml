<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/normal_margin_8"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/ll_ids_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/normal_margin_10">

        <com.example.chms_android.ui.components.CircularImageView
            android:id="@+id/civ_ids_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/avatar_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/normal_margin_10"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ids_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医生姓名"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/title_size_16" />

            <TextView
                android:id="@+id/tv_ids_community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin_8"
                android:text="社区名称" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>