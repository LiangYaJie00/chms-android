<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="loginTitle">
        <item name="android:textSize">@dimen/title_size_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.4</item>
    </style>
    <style name="loginContent">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
    <style name="loginNormalText">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
    <style name="loginAccountStateText">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="loginBtnStyle">
        <item name="android:textSize">@dimen/title_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.6</item>
        <item name="android:background">@color/Indigo</item>
    </style>
    <style name="forgetContent">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">2</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置全屏显示 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 使状态栏透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 如果需要透明导航栏，兼容某些机型 -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- 登录页面主按钮样式 -->
    <style name="LoginPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/actionbar_color</item>
        <item name="rippleColor">#80FFFFFF</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- 登录页面次要按钮样式 -->
    <style name="LoginSecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/actionbar_color</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="strokeColor">@color/actionbar_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">#80CCCCCC</item>
    </style>

    <!-- 日期选择器对话框样式 -->
    <style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 对话框主按钮样式 - 优化版 -->
    <style name="DialogPrimaryButton" parent="Widget.MaterialComponents.Button">
        <!-- 文字样式 -->
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAllCaps">false</item>
        
        <!-- 形状和大小 -->
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        
        <!-- 颜色和效果 -->
        <item name="backgroundTint">@color/actionbar_color</item>
        <item name="rippleColor">#33FFFFFF</item>
        <item name="elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/btn_background_login</item>
    </style>

    <!-- 对话框次要按钮样式 - 优化版 -->
    <style name="DialogSecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- 文字样式 -->
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/actionbar_color</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAllCaps">false</item>
        
        <!-- 形状和大小 -->
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        
        <!-- 颜色和效果 -->
        <item name="strokeColor">@color/actionbar_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">#1A000000</item>
        <item name="android:background">@drawable/btn_background_register</item>
    </style>

    <!-- 对话框按钮容器样式 -->
    <style name="DialogButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- 对话框整体样式 -->
    <style name="CustomDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 对话框内容容器样式 -->
    <style name="DialogContentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- 对话框标题样式 -->
    <style name="DialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- 自定义 TextInputLayout 样式 -->
    <style name="CustomOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/actionbar_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/actionbar_color</item>
    </style>

    <!-- JPush主题 -->
    <style name="JPushTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>