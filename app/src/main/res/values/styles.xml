<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="loginTitle">
        <item name="android:textSize">@dimen/title_size_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.4</item>
    </style>
    <style name="loginContent">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
    <style name="loginNormalText">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
    <style name="loginAccountStateText">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="loginBtnStyle">
        <item name="android:textSize">@dimen/title_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.6</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="forgetContent">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">2</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
</resources>