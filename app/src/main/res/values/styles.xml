<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="loginTitle">
        <item name="android:textSize">@dimen/title_size_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.4</item>
    </style>
    <style name="loginContent">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
    <style name="loginNormalText">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
    <style name="loginAccountStateText">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="loginBtnStyle">
        <item name="android:textSize">@dimen/title_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.6</item>
        <item name="android:background">@color/Indigo</item>
    </style>
    <style name="forgetContent">
        <item name="android:textSize">@dimen/title_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">2</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置全屏显示 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 使状态栏透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 如果需要透明导航栏，兼容某些机型 -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- 登录页面主按钮样式 -->
    <style name="LoginPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/actionbar_color</item>
        <item name="rippleColor">#80FFFFFF</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- 登录页面次要按钮样式 -->
    <style name="LoginSecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/actionbar_color</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="strokeColor">@color/actionbar_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">#80CCCCCC</item>
    </style>

    <!-- 日期选择器对话框样式 -->
    <style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>